<div class="container mt-5">
  <h1 class="mb-4 text-center">Create a New List</h1>

  <div class="card p-4 shadow-sm">
    <%= form_with model: @list, local: true do |form| %>
      <div class="form-group mb-3">
        <%= form.label :name, class: "form-label fw-bold" %>
        <%= form.text_field :name, class: "form-control" %>
      </div>

      <div class="d-flex justify-content-between">
        <%= link_to 'Back to all lists', lists_path, class: "btn btn-secondary" %>
        <%= form.submit "Create List", class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>
