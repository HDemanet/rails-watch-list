<div class="container mt-5">
  <h1 class="mb-4 text-center">Créer une nouvelle liste de films</h1>

  <div class="card p-4 shadow-sm">
    <%= form_with model: @list, local: true do |form| %>
      <div class="form-group mb-3">
        <%= form.label :name, "Entrer le nom de la liste", class: "form-label fw-bold" %>
        <%= form.text_field :name, class: "form-control" %>
      </div>

      <div class="d-flex justify-content-between">
        <%= link_to 'Retour aux listes', lists_path, class: "btn btn-secondary" %>
        <%= form.submit "Créer la liste", class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>
