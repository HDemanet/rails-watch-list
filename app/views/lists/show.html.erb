<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://plus.unsplash.com/premium_photo-1730112231198-b958b5cce6c8?q=80&w=3540&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D);">
  <div class="container">
    <h1><%= @list.name %></h1>
  </div>
</div>

<div class="container mt-5 mb-5">
  <div class="text-end mb-4">
    <%= link_to 'Add a movie', new_list_bookmark_path(@list), class: 'btn btn-primary' %>
  </div>

  <div class="row">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="col-md-4 mb-4">
        <div class="card-trip">
          <img src="<%= bookmark.movie.poster_url %>" alt="<%= bookmark.movie.title %>" />
          <%# recuperer poster_url %>
          <div class="card-trip-infos">
            <div>
              <h2><%= bookmark.movie.title %></h2>
              <p class="display-flex justify-content-between align-items-center" >
                <span>
                  <i class="fas fa-quote-left text-muted me-2"></i>
                  <%= bookmark.comment %>
                </span>
                <span>
                  <%= link_to 'Delete', bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: 'text-danger' %>
                </span>
              </p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
