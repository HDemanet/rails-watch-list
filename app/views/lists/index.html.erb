
<%# banner du Wagon %>
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1489599849927-2ee91cede3ba?q=80&w=3270&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D);">
  <div class="container">
    <h1>Save any kind of movies</h1>
    <p>Classic</p>
  </div>
</div>

<div class="container mt-5 mb-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">My Lists</h1>
    <%= link_to 'Create a movie list', new_list_path, class: "btn btn-primary" %>
  </div>

  <div class="d-flex flex-wrap justify-content-center gap-3">
    <% @lists.each do |list| %>
      <%= link_to list_path(list), class: "card-wrapper text-decoration-none" do %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
          <div class="card-body">
            <h2 class="card-title"><%= list.name %></h2>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>

</div>
