
<%# banner du Wagon %>
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.6),rgba(0,0,0,0.6)), url('<%= cl_image_path("https://res.cloudinary.com/dycdymgsi/image/upload/v1732894754/e67hhnzbsxi5gr1vycmo.jpg") %>');">
  <div class="container">
    <h1>Ma Cinémathèque</h1>
    <p>Je crée, j'organise et je retrouve facilement mes films préférés</p>
  </div>
</div>

<div class="container mt-5 mb-5">
  <div class="d-flex justify-content-center mb-4">
    <h1 class="mb-0">Mes listes</h1>
  </div>

  <div class="text-center mb-4">
    <%= link_to 'Créer une nouvelle liste', new_list_path, class: "btn btn-primary" %>
  </div>

  <div class="d-flex flex-wrap justify-content-center gap-3">
    <% @lists.each do |list| %>
      <%= link_to list_path(list), class: "card-wrapper text-decoration-none" do %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= list.photo.attached? ? url_for(list.photo) : "https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg" %>')">
          <div class="card-body">
            <h2 class="card-title"><%= list.name %></h2>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>

</div>
