
<div class="container mt-5">
  <h1 class="text-center mb-4">Ajouter un signet Ã  <%= @list.name %></h1>
  <div class="card p-4 shadow-sm">
    <%= simple_form_for [@list, @bookmark], html: { class: 'd-flex flex-column align-items-center' } do |f| %>

      <!-- Movie Selection -->
      <div class="form-group mb-3 w-75">
        <%= f.input :movie_id, collection: Movie.all, prompt: 'Choisir un film', label_method: :title, value_method: :id, input_html: { class: 'form-control' } %>
      </div>

      <!-- Comment Input -->
      <div class="form-group mb-3 w-75">
        <%= f.input :comment, label: 'Ajouter un commentaire', required: true, input_html: { class: 'form-control' } %>
      </div>

      <!-- Submit Button and Back Link -->
      <div class="d-flex justify-content-between">
        <%= link_to 'Back to list', list_path(@list), class: "btn btn-secondary" %>
        <%= f.button :submit, 'Add Bookmark', class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>
