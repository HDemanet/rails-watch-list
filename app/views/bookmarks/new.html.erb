<h1 class="text-center mb-4">Add a Bookmark to <%= @list.name %></h1>

<%= simple_form_for [@list, @bookmark], html: { class: 'd-flex flex-column align-items-center' } do |f| %>
  <div class="form-group w-75">
    <%= f.input :movie_id, collection: Movie.all, prompt: 'Select a Movie', label_method: :title, value_method: :id, input_html: { class: 'form-control' } %>
  </div>

  <div class="form-group w-75">
    <%= f.input :comment, label: 'Comment', required: true, input_html: { class: 'form-control' } %>
  </div>

  <%= f.button :submit, 'Add Bookmark', class: 'btn btn-success mt-3' %>
<% end %>

<%= link_to 'Back to list', list_path(@list), class: 'btn btn-secondary mt-3' %>
